{
  "manifest_version": 3,
  "name": "WordPress макросы",
  "version": "3.0",
  "description": "Добавляет макросы для копирования в WordPress",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "scripting",
    "storage"
  ]
}